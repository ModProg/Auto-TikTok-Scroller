{
  "manifest_version": 2,
  "name": "Auto TikTok Scroller",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["./dist/content.js"]
    }
  ],
  "permissions": ["tabs"],
  "browser_action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./img/tiktok.png",
    "default_title": "Start scrolling."
  }
}
